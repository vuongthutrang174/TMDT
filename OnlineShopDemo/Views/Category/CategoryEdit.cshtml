
@{
    ViewData["Title"] = "CategoryEdit";
    Layout = "~/Views/Share/_Layout.cshtml";
}

@model OnlineShopDemo.Models.ViewModel.CategoryViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="col-12" id="ProductList">

  

    <div class="row" id="EditForm">
        <div class="row" id="EditTitle">
            <h5>CATEGORY</h5>
            <div class="row" id="line">
                <button> <i class="fas fa-chevron-left"></i></button>
            </div>
        </div>
        <form Id="formEditProduct" enctype="multipart/form-data" method="post" asp-controller="Category" asp-action="Edit">
            <div class="EditContainer">
                <div class="col-xl-4" id="ProductIMG">
                    <div id="container">
                        <h5 style="padding-top:20px;padding-bottom:20px;border-bottom: 1px solid lightgrey;margin-bottom:20px;">EDIT</h5>
                        <div class="row" id="line">
                            <label for="Text">Category ID</label>
                            <input asp-for="@Model.Category.CateID" id="pass" type="text" readonly>
                            <span asp-validation-for="@Model.Category.CateID"></span>
                        </div>

                        <div class="row" id="line">
                            <label for="Text">Category Name</label>
                            <input asp-for="@Model.Category.CateName" id="pass" type="text" required>
                            <span asp-validation-for="@Model.Category.CateName"></span>
                        </div>
                        <div class="row" id="line">
                            <button type="submit" id="SaveBtn"> EDIT </button>
                        </div>

                    </div>

                </div>

                <div class="col-xl-4 ">

                </div>

                <div class="col-xl-4 display">

                </div>

            </div>

        </form>
    </div>

</div>







